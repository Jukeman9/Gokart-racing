{
  "name": "gokart-mobile-game",
  "version": "1.0.0",
  "description": "A fully-featured go-kart racing game for mobile browsers with multiplayer support",
  "main": "server/server.js",
  "scripts": {
    "start": "node server/server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/server.js",
    "client": "live-server public --port=3000",
    "build": "npm run build:client && npm run build:server",
    "build:client": "mkdir -p dist && cp -r public/* dist/",
    "build:server": "mkdir -p dist/server && cp -r server/* dist/server/",
    "netlify-build": "npm run build:client"
  },
  "dependencies": {
    "bootstrap": "^5.3.2",
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1",
    "live-server": "^1.2.2"
  },
  "keywords": ["game", "racing", "mobile", "multiplayer", "gokart", "html5"],
  "author": "GoKart Game Developer",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  }
}